<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NOAA Stations</title>
    <style>
      body {
        font-family: Arial, sans-serif;
      }
      #response {
        margin-top: 20px;
      }
      .station {
        margin-bottom: 10px;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>

    <div class="container mt-4">
      <h1>Find Nearest Weather Stations</h1>

      <div class="row mt-4">
        <div class="col-md-6">
          <form action="/find-closest-stations" method="POST">
            <div class="form-group">
              <label for="city">Enter City Name:</label>
              <input
                type="text"
                class="form-control"
                id="city"
                name="city"
                required
              />
            </div>
            <div class="form-group mt-3">
              <label for="radius">Search Radius (miles):</label>
              <input
                type="number"
                class="form-control"
                id="radius"
                name="radius"
                min="1"
                max="100"
                value="10"
                placeholder="Enter radius in miles"
              />
              <small class="form-text text-muted"
                >Default is 10 miles if not specified</small
              >
            </div>
            <button type="submit" class="btn btn-primary mt-3">
              Find Stations
            </button>
          </form>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>

