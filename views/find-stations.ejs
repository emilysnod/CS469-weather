<!DOCTYPE html>
<html>
  <head>
    <title>Find Closest NOAA Weather Stations</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        max-width: 700px;
        margin: 0 auto;
        padding: 20px;
      }
      .error {
        color: #c62828;
        margin: 10px 0;
      }
      .station-list {
        margin-top: 20px;
      }
      .station-item {
        background: #f5f5f5;
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 4px;
      }
    </style>
  </head>
  <body>
    <h1>Find Closest NOAA Weather Stations</h1>
    <form method="POST" action="/find-stations">
      <label for="city">Enter City:</label>
      <input
        type="text"
        id="city"
        name="city"
        required
        placeholder="e.g. Portland, OR"
        value="<%= city || '' %>"
      />
      <button type="submit">Find Stations</button>
    </form>
    <% if (stations && stations.length > 0) { %>
    <div class="station-list">
      <h2>Closest Stations to <%= city %>:</h2>
      <% stations.forEach(station => { %>
      <div class="station-item">
        <strong><%= station.name %></strong><br />
        ID: <%= station.id %><br />
        Location: <%= station.latitude %>, <%= station.longitude %>
      </div>
      <% }) %>
    </div>
    <% } %> <% if (error) { %>
    <div class="error"><%= error %></div>
    <% } %>
    <p style="margin-top: 20px">
      <a href="/" style="color: #2196f3; text-decoration: none">Back to Home</a>
    </p>
  </body>
</html>
